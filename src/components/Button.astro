---
import "../styles/global.css";

const { id, innerHtml, labelColor, bgColor, w, h, link, type, disable = false} = Astro.props;

const buttonType = `${type}`;
---

<button set:html={innerHtml} class={buttonType} id={id} disabled={disable || undefined}> </button>

<!-- ------ Local style ------ -->

<style define:vars={{ bgColor: bgColor, labelColor: labelColor, w: w, h: h }}>
    button:disabled {
        background: var(--secondary);
        color: var(--labelColor);
        cursor: not-allowed;
    }

    button:disabled:hover {
        background: var(--secondary);
        color: var(--labelColor);
        box-shadow: none;
        filter: none;
        cursor: not-allowed;
    }


    button {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        text-align: center;

        width: fit-content;
        height: fit-content;
        padding: 5px 12px;

        background: var(--bgColor);
        color: var(--labelColor);

        border: none;
        border-radius: 25px;
        
        cursor: pointer;
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .fixed-w {
        width: var(--w);
    }

    .invert:hover {
        background: var(--labelColor);
        filter: drop-shadow(0 0 0.5rem var(--bgColor));
        color: var(--bgColor);
    }

    .normal:hover {
        box-shadow: 0px 0px 10px 2px rgb(0, 0, 0);
    }
</style>