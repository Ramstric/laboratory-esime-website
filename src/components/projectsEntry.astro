---
import "../styles/global.css";
const baseSite = "laboratory-esime-website";

const {id, title, author, date, description, image, tags, link} = Astro.props;
---

<a class="projectEntry" id={id} href=`project/${link}`>
	<div class="content">
		<div class="title">
			<p>{date}</p>
			<h2>{title}</h2>
			<p>{author}</p>
		</div>
		<div class="tags">
			{tags.map((tag : string[]) => (
				<span class="tag">{tag}</span>
			))}
		</div>
	</div>

	<div class="image">
		<span class="project-select"></span>
		<img src={image} alt="Project entry image" class=`project-image ${id}` />
	</div>
</a>

<style>
	.projectEntry {
		display: flex;
		flex-direction: row;
		width: 100%;
		height: 300px;

		gap: 50px;
		padding: 25px;

		border-radius: 12px;

		/*background-color: var(--white);*/
	}

	.content {
		height: 100%;
		gap: 25px;
		text-align: right;
	}

	.title {
		& h2 {
			color: var(--white);
			font-weight: 600;
		}
		& p {
			color: var(--light-gray);
		}

	}

	.tags {
		place-content: flex-end;
		flex-direction: row;

		gap: 15px;
	}

	.tag {
		width: fit-content;

		padding: 2px 15px;
		border-radius: 18px;

		background-color: var(--white);
	}

	.image {
		flex-direction: row;
		min-width: 700px;
		height: 250px; 
	}

	.project-image {
		width: 700px;
		height: 250px;

		object-fit: cover;

		background-color: var(--background);
		transition: all 0.15s ease-in-out;
	}

	.project-select {
		height: 100%;
		background-color: var(--white);

		transition: all 0.15s ease-in-out;
	}

	.projectEntry:hover {
		cursor: pointer;

		& img {
			width: 500px;
			filter: drop-shadow(0 0 20px rgb(0, 0, 0));
		}
	}

</style>